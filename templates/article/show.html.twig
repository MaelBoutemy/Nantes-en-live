{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block page %}

    <h2>{{ article.title }}</h2>

    <p>{{ article.content }}</p>

    <p>Created_At : {{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' | trans }}</p>

    <p>Updated_At : {{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' | trans }}</p>

    <a class="button" href="{{ path('article_index') }}">back to list</a>

        {% if is_granted('ROLE_ADMIN') %}
    <a class="button" href="{{ path('article_edit', {'slug': article.slug}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
        {% endif %}

{% endblock %}
